<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <ImageView android:id="@+id/image_setting"
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center_horizontal"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="carlrocks"
                      android:textColor="@color/settingTextColorTitle"
                      android:textSize="16sp"
                      android:layout_gravity="center_horizontal"/>

            <ImageView android:layout_width="70dp"
                       android:layout_height="25dp"
                       android:src="@drawable/icon_me_merchant"
                       android:layout_gravity="center_horizontal"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="@color/whiteColor">

                <pundix.merchant.com.filerecvandroiddemo.common.LableBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ico="@drawable/icon_me_balance"
                        app:subtitle="Rp:188.668"
                        app:title="Banlance"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#F5F5F5"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"/>

                <pundix.merchant.com.filerecvandroiddemo.common.LableBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ico="@drawable/icon_me_bill"
                        app:title="Transacation"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="20dp"
                          android:background="@color/whiteColor">

                <pundix.merchant.com.filerecvandroiddemo.common.LableBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ico="@drawable/icon_me_mercoupon"
                        app:title="PANDI Vouther"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#F5F5F5"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"/>

                <pundix.merchant.com.filerecvandroiddemo.common.LableBarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ico="@drawable/icon_me_cashcoupon"

                        app:title="Merthant Vouther"/>

            </LinearLayout>

            <pundix.merchant.com.filerecvandroiddemo.common.LableBarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ico="@drawable/icon_me_settings"
                    android:background="@color/whiteColor"
                    android:layout_marginTop="20dp"
                    app:title="Settings"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>